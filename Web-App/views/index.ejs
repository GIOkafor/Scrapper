<!DOCTYPE html>
<html>
<head>
	<title>Kijiji Scraper</title>
	<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script type="text/javascript" src="/javascripts/angularApp.js"></script>
</head>
<body ng-app="myApp">
	<ui-view></ui-view>

	<script type="text/ng-template" id="/results.html">
		<div class="body">
			<table class="table">
				<tr>
					<th>#</th>
					<th>Title</th>
					<th>Description</th>
					<th>Price</th>
					<th>Image</th>
				</tr>
				<tr ng-repeat="result in results">
					<td>{{$index + 1}}</td>
					<td><a ng-src="{{result.title_link}}">{{result.title_link}}</a></td>
					<td>{{result.description}}</td>
					<td>{{result.price_value}}</td>
					<td>{{result.image}}</td>
				</tr>
			</table>
		</div>
	</script>

</body>
</html>